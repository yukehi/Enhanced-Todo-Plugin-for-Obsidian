{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES6"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
