{
  "name": "enhanced-todo",
  "version": "1.0.0",
  "description": "Enhanced Todo plugin for Obsidian with priority-based time allocation, auto-scheduling, and intelligent task breakdown",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "todo",
    "task-management",
    "productivity",
    "time-blocking"
  ],
  "author": "aleksey zgeria",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "obsidian": "latest",
    "tslib": "2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "luxon": "^3.4.4"
  }
}
